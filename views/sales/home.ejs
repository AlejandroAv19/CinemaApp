<% layout("layouts/boilerplate") %>
<h1>Viewing Sales</h1>
<h2>Products Sales</h2>
<!-- VIEWING SALES -->
<table>
  <thead>
    <tr>
      <td>Done By</td>
      <td>Type</td>
      <td>Date</td>
      <td>Total</td>
      <td>Details</td>
    </tr>
  </thead>
  <tbody>
    <% for(sale of sales){ %> <% if(sale.type === "product"){ %>
    <tr>
      <td>
        <a href="/users/<%= sale.madeBy._id %>"><%= sale.madeBy.name %></a>
      </td>
      <td><%= sale.type %></td>
      <td><%= sale.date %></td>
      <td><%= sale.total %></td>
      <td><a href="/sellproducts/<%= sale.details._id %>">Show</a></td>
    </tr>
    <% } %> <% } %>
  </tbody>
</table>
