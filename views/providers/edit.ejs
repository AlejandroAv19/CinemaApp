<% layout("layouts/boilerplate") %>
<h1>Editing Provider With ID: <%= provider._id %></h1>
<form action="/providers/<%=provider._id%>?_method=PATCH" method="post">
  <div>
    <label for="name">Name: </label>
    <input type="text" name="name" id="name" value="<%= provider.name %>" />
  </div>
  <div>
    <label for="phone">Phone Number: </label>
    <input
      type="number"
      name="phone"
      id="phone"
      value="<%= provider.phone %>"
    />
  </div>
  <div>
    <label for="email">Email: </label>
    <input type="email" name="email" id="email" value="<%= provider.email %>" />
  </div>
  <div>
    <button>Update provider</button>
  </div>
</form>
