<% layout("layouts/boilerplate") %>
<h1>Users Home</h1>
<div class="container d-flex flex-row">
  <div class="container">
    <h2>New User</h2>
    <form action="/users" method="POST">
      <!--NAME-->
      <div>
        <label class="form-label" for="name">Name </label>
        <input class="form-control mb-2" type="text" name="name" id="name" />
      </div>
      <!--HIRE DATE-->
      <div>
        <label class="form-label" for="hireDate">Hire Date </label>
        <input
          class="form-control mb-2"
          type="date"
          name="hireDate"
          id="hireDate"
        />
      </div>
      <!--USER TYPE-->
      <div>
        <label class="form-label" for="userType">User Type</label>
        <select class="form-select mb-2" name="userType" id="userType">
          <option selected>Choose user type</option>
          <option value="employee">Employee</option>
          <option value="stock manager">Stock Manager</option>
          <option value="admin">Admin</option>
        </select>
      </div>
      <!--USERNAME-->
      <div>
        <label class="form-label" for="username">Username </label>
        <input
          class="form-control mb-2"
          type="text"
          name="username"
          id="username"
        />
      </div>
      <!--PASSWORD-->
      <div>
        <label class="form-label" for="password">Password </label>
        <input
          class="form-control mb-2"
          type="password"
          name="password"
          id="password"
        />
      </div>
      <div>
        <button type="submit" class="btn btn-primary">Create</button>
      </div>
    </form>
  </div>
  <div class="container">
    <h2>Showing all users</h2>
    <table class="table">
      <thead>
        <tr>
          <th scope="col">Name</th>
          <th scope="col">Hire Date</th>
          <th scope="col">User Type</th>
          <th scope="col">Show</th>
          <th scope="col">Update</th>
          <th scope="col">Delete</th>
        </tr>
      </thead>
      <tbody>
        <% for(user of users){ %>
        <tr>
          <td scope="row"><%= user.name %></td>
          <td scope="row"><%= user.hireDate %></td>
          <td scope="row"><%= user.userType %></td>
          <td scope="row">
            <button
              class="btn btn-outline-info"
              data-bs-toggle="modal"
              data-bs-target="#showModal"
              id="show_button"
            >
              Show
            </button>
          </td>
          <td scope="row">
            <form action="/users/<%= user._id%>/edit">
              <button class="btn btn-outline-warning">Update</button>
            </form>
          </td>
          <td scope="row">
            <form action="/users/<%= user._id%>?_method=DELETE" method="post">
              <button class="btn btn-outline-danger">Delete</button>
            </form>
          </td>
        </tr>
        <% } %>
      </tbody>
    </table>
  </div>
</div>

<!-- MODALS -->
<!-- SHOW MODAL -->
<div
  class="modal fade"
  id="showModal"
  tabindex="-1"
  role="dialog"
  aria-labelledby="exampleModalLabel"
  aria-hidden="true"
>
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Showing User</h5>
        <button
          type="button"
          class="close"
          data-bs-dismiss="modal"
          aria-label="Close"
        >
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <!-- MODAL BODY -->
        <div>
          <label>ID</label>
          <p id="show_id"></p>
        </div>
        <div>
          <label>Name</label>
          <p id="show_name"></p>
        </div>
        <div>
          <label>Hire Date</label>
          <p id="show_hire_date"></p>
        </div>
        <div>
          <label>User Type</label>
          <p id="show_user_type"></p>
        </div>
        <div>
          <label>User Name</label>
          <p id="show_user_name"></p>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
          Close
        </button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>
</div>

<!-- SCRIPTS -->
<script src="/scripts/users_home.js"></script>
